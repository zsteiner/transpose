<!DOCTYPE html>
<html>
	<head>
		<title>Transpose</title>
        <meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="css/transpose.css" />
		<script src="scripts/jquery-3.0.0-alpha1.js"></script>
		<script src="scripts/iscroll.js"></script>
	</head>
	<body>
        <!--@include "svg-icons" -->
        <header class="tr-layout__header">    
            <div class="header-logo">
                <h1>transpose</h1>
            </div>
        </header>
		<div class="tr-layout__main">
    			<h2>choose your instruments</h2>
    		    <div class="tr-selection">  
        		    <div class="tr-selection__instrument">
            		    <a id="instrument-source" class="tr-button" data-value="source">
                		    <svg class="tr-button__icon icon"><use xlink:href=""></use></svg>
                		    <span class="tr-button__name instrument-name"></span>
            		    </a>
        		    </div>
                    <div class="tr-selection__arrow">
                        <svg class="icon icon-arrow-right"><use xlink:href="#icon-arrow-right"></use></svg>       	    
                    </div>       		    
        		    <div class="tr-selection__instrument">    
            		    <a id="instrument-transpose" class="tr-button tr-button--empty" data-value="transpose">
                		    <svg class="tr-button__icon icon"><use xlink:href="#icon-plus"></use></svg>
                		    <span class="tr-button__name">add an instrument</span>
            		    </a>
        		    </div>
    		    </div>
    		    
    		    <div class="tr-instruments is-hidden">   
                    <div class="scroll-wrapper" id="scroll1">
                    	<div class="scroll-content">
                		    <ul id="source-list" class="tr-instruments__list is-hidden"></ul>
                		    <ul id="transpose-list" class="tr-instruments__list is-hidden"></ul>
                    	</div>
                    </div>
    		    </div>
                
                <div class="tr-messages">  
        			<div class="tr-messages__message tr-messages__message--default">choose a note</div>
            		
            		<div id="message-error-note" class="tr-messages__message tr-messages__message--error is-hidden">
                		<svg class="icon"><use xlink:href="#icon-beamed-note"></use></svg> Choose a note.
            		</div>
            		
            		<div id="message-error-source" class="tr-messages__message is-hidden">Choose an original instrument.</div>
            		<div id="message-error-transpose" class="tr-messages__message is-hidden">Choose a transposing instrument.</div>

            		<div id="message-result" class="tr-messages__message is-hidden">
                		&ldquo;<span class="original-note"></span>&rdquo; on the <span class="original-instrument"></span> sounds the same as &ldquo;<span class="transpose-note"></span>&rdquo; on the <span class="transpose-instrument"></span>.
            		</div>
            		
            		<div id="message-same" class="tr-messages__message is-hidden">
                		No need to transpose between <span class="original-instrument"></span> and <span class="transpose-instrument"></span>.
            		</div>
                </div>
                <!--@include "circle-menu" -->
		</div>
	</body>
	<script src="scripts/transpose.js"></script>
</html>
